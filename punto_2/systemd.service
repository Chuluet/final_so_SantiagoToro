[Unit]
Description=FastAPI service
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/taller-ec2
Environment="AWS_EC2_METADATA_DISABLED=false"
Environment="AWS_DEFAULT_REGION=us-east-1"
ExecStart=/home/ubuntu/miniconda3/envs/fastapi_env/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
